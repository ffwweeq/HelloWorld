        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnGo" Content="開始" HorizontalAlignment="Left" Margin="487,0,0,0" VerticalAlignment="Center" Height="60" Width="110" Click="btnGo_Click"/>
        <TextBox x:Name="txtShow" HorizontalAlignment="Left" Margin="180,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="128" Height="60"/>

    </Grid>
</Window>
